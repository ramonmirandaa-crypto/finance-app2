# Copie este arquivo para .env antes de iniciar o docker-compose

# Host do banco PostgreSQL
DB_HOST=

# Porta do PostgreSQL
DB_PORT=

# Usuário do banco
DB_USER=

# Senha do usuário
DB_PASSWORD=

# Nome do banco
DB_NAME=

# Origem permitida para requisições do frontend
ALLOWED_ORIGIN=

# Chave de criptografia simétrica dos dados
DATA_ENCRYPTION_KEY=

# Client ID do Pluggy
PLUGGY_CLIENT_ID=

# Client Secret do Pluggy
PLUGGY_CLIENT_SECRET=

# URL base da API do Pluggy
PLUGGY_BASE_URL=

# Nível de log da API
LOG_LEVEL=

# Chave secreta usada na assinatura de tokens JWT para autenticação
JWT_SECRET=

# Ambiente da aplicação (defina "production" para ativar cookies secure; exige HTTPS)
NODE_ENV=
